                        <Font size="16.0" />
                     </font>
                  </Text>
                  <Text fx:id="provideVertices22" fill="#6f6f6f" layoutX="7.0" layoutY="374.0" text="MANUAL" textAlignment="CENTER" wrappingWidth="200.0">
